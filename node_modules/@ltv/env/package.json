{
  "name": "@ltv/env",
  "version": "4.0.0",
  "description": "NodeJS Environment Utils",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "repository": {
    "url": "git@github.com:ltv/env.git"
  },
  "author": "Luc <luc@ltv.vn>",
  "license": "MIT",
  "files": ["dist"],
  "scripts": {
    "lint": "eslint './src/**/*.ts'",
    "build": "tsup",
    "test": "bun test",
    "test:watch": "bun test --coverage --watch",
    "test:prod": "bun lint && bun test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "prepush": "bun test:prod && bun build",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "latest-prepare": "standard-version --no-verify"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": ["prettier --write"]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "release": {
    "branches": ["main", "next"]
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.13.0",
    "@types/bun": "1.1.12",
    "commitizen": "4.3.1",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "globals": "15.11.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "semantic-release": "24.2.0",
    "standard-version": "9.5.0",
    "tsup": "8.3.5",
    "typescript-eslint": "8.12.2"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  }
}
